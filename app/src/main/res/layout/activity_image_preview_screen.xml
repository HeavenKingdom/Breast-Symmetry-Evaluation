<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Screen.ImagePreviewScreen">

    <!--<com.example.breast_symmetry_evaluation.Camera.AutoFitTextureView
        android:id="@+id/pre_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>-->

    <ImageView
        android:id="@+id/pre_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/cancel_upload"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/photo_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/upload_image"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="上传"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.35"
        android:background="@drawable/upload_style"
        />

</RelativeLayout>